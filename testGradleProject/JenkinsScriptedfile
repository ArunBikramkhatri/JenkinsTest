node {
    try{
        stage('Build') {
            dir('/testGradleProject'){
                echo "building"
                sh './gradlew build'
            }
        }
        stage('Test'){
            dir('/testGradleProject'){
                echo "testing"
                sh './gradlew test'
            }
        }
    }catch(Exception ex){
        echo "pipeline failed : ${ex.getMessage()}"
    }

}